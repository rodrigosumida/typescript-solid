{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    // "moduleResolution": "NodeNext",
    "lib": ["ESNext", "DOM"],
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "noEmitOnError": true,
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "./src"
  ]
}
